<!DOCTYPE html>
<html>
  <head>
    <title>Hackernews</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <div id="main" class="container">
      <header class="navbar navbar-default" role="navigation">
        <div id="logo" class="navbar navbar-brand"><%= link_to('Hacker News', root_path) %></div>
        <nav class="collapse navbar-collapse navbar-ex-1-collapse">
          <% if user_signed_in? %>
            <ul class="nav navbar-nav navbar-right">
              <li><%= link_to 'Submit', new_submission_path %></li>
              <li><%= link_to 'Account', edit_user_registration_path %></li>
              <li><%= link_to 'Logout', destroy_user_session_path, method: :delete %></li>
            </ul>
          <% else %>
            <ul class="nav navbar-nav navbar-right">
              <li><%= link_to 'Login', new_user_session_path %></li>
            </ul>
          <% end %>
        </nav>
      </header>
  
      <% flash.each do |name, msg| %>
        <%= content_tag(:div, msg, class:"alert alert-#{name}")  %>
      <% end %>

      <div id="container" class="center-block">
        <%= yield %>
      </div>
      
    </div>
  </body>
</html>
